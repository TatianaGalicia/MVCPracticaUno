<h1>Mantenimiento de Equipo</h1>
<br/>
<form asp-action="CrearEquipos">
    @*Inicio del Formulario*@
    <div class="form-group row mb-4"></div>
    <div class="col-sm-2">
        <label>Nombre</label>
    </div>
    <div class="col-sm-4">
        @Html.TextBox("Nombre","", new {@class="form-control"})
    </div>
    <div class="col-sm-2">
        @Html.Label("lblDescripcion", "Descripcion")
    </div>
    <div class="col-sm-4">
        @Html.TextArea("descripcion", "", new { @class = "form-control", @placeHolder="Ingrese la descripcion" })
    </div>

    <div class="form-group row mb-4">

    </div>
    <div class="form-group row mb-4"></div>
    <div class="form-group row mb-4"></div>
    <div class="form-group row mb-4"></div>
    <div class="form-group row mb-4"></div>
    <div class="form-group row mb-4"></div>
    <table class="table table-striped"></table>
    @*Fin del Formulario*@

</form>
}
